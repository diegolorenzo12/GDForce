        </nav>  
            <form action="register" method="POST" class="mitad">
                <div class="login-form-box"> 
                    <img src="resources/images/Logo2.png">
                    <div class="login-header">Register</div>
                    <input name="user"  id="user"  type="text" placeholder="Nombre">
                    <input name="email"  id="email"  type="text" placeholder="Correo Electrónico">
                    <input name="pass"  id="pass" type="password" placeholder="Contraseña">
                </div>
