                    <input name="last"  id="last"  type="text" placeholder="Apellido"">
                    <input name="cel"  id="cel" type="number" placeholder="Celular">
                    <input name="cpass"  id="cpass" type="password" placeholder="Confirma contraseña">
                    <div class="login-signup-container">
                        <input type="submit" value="save" style=" padding-left: 3%; padding-right: 3%;  padding: 2%;background-color: #016AE8; color: white; margin-left: 5%; font-weight: bold; border: 0;">
